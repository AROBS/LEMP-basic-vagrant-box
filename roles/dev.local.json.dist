{
  "name": "vagrant",
  "chef_type": "role",
  "json_class": "Chef::Role",
  "description": "vagrant instance, responsible for deploying a vm for a developer",
  "override_attributes": {
    "box_name": "vagrant"
  },
  "default_attributes": {
    "app" : {
        "servername" : "test.local",
        "base_dir" : "/vagrant_data"
      }
    },
  "run_list": [
    "recipe[apt]",
    "recipe[app::java7]",
    "recipe[ant]",
    "recipe[nginx]",
    "recipe[php]",
    "recipe[mysql::server]",
    "recipe[app::install]",
    "recipe[composer]"
  ]
}